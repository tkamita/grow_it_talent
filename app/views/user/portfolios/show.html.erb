<body class="public-scene">
  <%= render partial: '/template/header' %>
  <%= render partial: '/template/nav' %>
  <main class="post">
    <div class="learn-rec" style="padding: 50px 0">
    <%= form_with model: @portfolio, url: user_portfolio_path(@portfolio), method: :patch, local: true do |f| %>
      <div class="title" style="border: none;">
        <h6><%= f.text_field :title, style: 'width: 99%; height: 30px;' %> </h6>
      </div>
      <div class="lang" style="border: none;">
        <%= f.collection_check_boxes(:pg_lang_ids, PgLang.all, :id, :name) do |tag| %>
          <%= tag.label do %>
            <%= tag.check_box %>
            <%= tag.text %>
          <% end %>
        <% end %>
      </div>
      <div class="text" style="border: none;">
        概要<br>
        <%= f.text_area :content, style: 'width: 99%; height: 200;' %>
      </div>
      <div class="title" style="border: none;">
        <h6>サイトテーマ</h6>
        <h6><%= f.text_field :theme, style: 'width: 99%; height: 30px;' %> </h6>
      </div>
      <div class="title" style="border: none;">
        <h6>テーマを選んだ理由</h6>
        <%= f.text_field :reason, style: 'width: 99%; height: 30px;' %>
      </div>
      <div class="title" style="border: none;">
        <h6>ターゲットユーザ</h6>
        <%= f.text_field :target, style: 'width: 99%; height: 30px;' %>
      </div>
      <div class="title" style="border: none;">
        <h6>主な利用シーン</h6>
        <%= f.text_field :scene, style: 'width: 99%; height: 30px;' %>
      </div>
      <div class="title" style="border: none;">
        <h6>リンクURL</h6>
        <%= f.text_field :link_url, style: 'width: 99%; height: 30px;' %>
      </div>
    </div>
      <%= f.submit '保存', class: 'submit', style: 'margin-left: 260px;' %>
    <% end %>
  </main>
</body>