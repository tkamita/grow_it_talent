<body class="public-scene">
  <%= render partial: '/template/public_header' %>
  <%= render partial: '/template/public_nav' %>
  <main class="post">
    <div class="learn-rec">
      <div class="prof-box">
        <%= attachment_image_tag @applicant, :image, format: "jpeg", fallback: "no_image.jpeg", class: "item_image" %>
        <div class="creat-ttl">
          <p><%= @post.applicant.full_name %> </p>
          <p><span><%= l @post.created_at %></span></p>
        </div>
      </div>
      <div class="title">
        <h6><%= @post.title %></h6>
      </div>
      <div class="lang">
        <%= @post.pg_lang.name %>
      </div>
      <div class="text">
        <%= @post.content %>
      </div>
    </div>
  </main>
</body>