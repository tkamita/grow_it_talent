<body class="public-scene"><body class="public-scene">
  <%= render partial: '/template/public_header' %>
  <%= render partial: '/template/public_nav' %>
  <main class="post">
    <div class="page">
      <%= link_to '職務経歴書を見る', public_work_path(@applicant) %> 
      <%= link_to 'ユーザー詳細画面', public_applicant_path(@applicant) %>
      <%= link_to 'ポートフォリオへ', public_specific_user_path(@applicant) %> <br>
      <%= form_with url: public_path(@applicant), method: :get, class: 'boards__searchForm' do %>
        <%= select_tag :pg_lang_id, options_from_collection_for_select(PgLang.all, :id, :name, params[:pg_lang_id]), { prompt: '学習言語で検索', onchange: 'submit(this.form);' } %>
      <% end %>
    </div>
    <div class="learn-rec">
      <% @posts.each do |post| %>
        <ul>
          <li>
            <%= link_to public_post_path(post) do %>
              <%= image_tag post.applicant.image_id.url, class: "item_image" %>
              <div class="creat-ttl">
                <p><%= post.title %></p>
                <p><span><%= l post.created_at, format: :long %></span></p>
              </div>
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </main>
</body>