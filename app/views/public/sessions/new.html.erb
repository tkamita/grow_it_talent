<body class="newreg">
  <header>
    <div class="backcl"></div>
    <div class="logo"></div>
    <div class="loggin">
      <%= link_to "ログイン", new_session_path(resource_name) %>
    </div>
  </header>
  <main>
    <h1 class="title">　ログイン</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="new_applicant" style="width: 1000px;">
        <div class="uselog">
          <div class="firstp">
            <p>メールアドレス<span>必須</span><br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form', style: 'margin: 0;' %>
            </p>
          </div>
          <div class="second">
            <p>パスワード<span>必須</span><br>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form' %>
            </p>
          </div>
            <%= f.submit "ログイン", class: 'submit' %>
          <div class="bar">
            
          </div>
          <div class="regest">
            <%= link_to "新規登録", new_registration_path(resource_name), style: 'color: white; text-decoration: none;' %>
          </div>
        </div>
      </div>
    <% end %>
  </main>
</body>
