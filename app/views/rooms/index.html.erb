<body class="public-scene">
  <% if corporation_signed_in? %>
    <%= render partial: '/template/public_header' %>
    <%= render partial: '/template/public_nav' %>
  <% else %>
    <%= render partial: '/template/header' %>
    <%= render partial: '/template/nav' %>
  <% end %>
  <main class="post">
    <div class="learn-rec">
      <% @rooms.each do |room| %>
        <ul>
          <li>
            <div class="creat-date">
              <%= l room.created_at, format: :short %>
            </div>
            <div class="messa-ttl">
              <% if corporation_signed_in? %>
                <p><%= room.applicant.full_name %></p>
              <% else %>
                <p><%= room.corporation.name %></p>
              <% end %>
            </div>
            <div class="offer">
              <%= link_to '詳細', room_path(room) %>
            </div>
          </li>
        </ul>
      <% end %>
    </div>
  </main>
</body>